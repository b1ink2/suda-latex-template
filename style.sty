\captionsetup[figure]{labelformat=simple, labelsep=quad}
\captionsetup[table]{labelformat=simple, labelsep=quad}
\renewcommand {\thetable} {\thechapter{}-\arabic{table}}
\renewcommand {\thefigure} {\thechapter{}-\arabic{figure}}

% 1.5倍行距
\linespread{1.625}

